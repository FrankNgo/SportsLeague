@model IEnumerable<SportsLeague.Models.Player>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.captain)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.playerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.captain)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.playerId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.playerId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.playerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
        <a asp-action="Create">Create New</a> | 


    @Html.ActionLink("Home", "Index", "Home")
</body>
</html>
